<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingTop="0px"

    android:background="@drawable/abc_aprender_orange_7_fundo"
    android:paddingRight="0dp"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/abc_aprender_sete"
            android:id="@+id/abc_aprender_sete_orange"
            android:layout_marginStart="64dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="312dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/abc_aprender_urso_cinco"
            android:id="@+id/abc_aprender_orange_button_cinco_sete"
            android:layout_marginTop="312dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="48dp"
            app:layout_constraintLeft_toRightOf="@+id/abc_aprender_sete_orange"
            android:layout_marginLeft="48dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/abc_aprender_urso_6"
            android:id="@+id/abc_aprender_seis_orange_sete"
            android:layout_marginTop="312dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="48dp"
            app:layout_constraintLeft_toRightOf="@+id/abc_aprender_orange_button_cinco_sete"
            android:layout_marginLeft="48dp"/>


        <ImageView
            android:layout_width="76dp"
            android:layout_height="73dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/sol_app"
            android:id="@+id/imageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="416dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>