<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="0dp"
              android:paddingTop="0px"
              android:paddingRight="0dp"
              android:baselineAligned="false">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Desenvolvedores:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="20sp"
            android:textAlignment="viewStart"
            android:textStyle="normal|bold"
            android:layout_marginEnd="104dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="104dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintHorizontal_bias="1.0"/>

        <TextView
            android:text="O aplicativo foi desenvolvido por Anderson Faro Santana e Lucas Barbosa, responsável pelo designer. Para entrar em contato, é só falar pelo Twitter ou Behance:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            tools:layout_editor_absoluteX="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"/>


        <TextView
            android:text="Contatos:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contatos"
            android:textSize="20sp"

            android:textStyle="normal|bold"
            android:textAlignment="viewStart"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.33"/>


        <TextView
            android:text="twitter.com/andersonFaro9"
            android:layout_width="wrap_content"
            android:autoLink="web"
            android:textColorLink="@color/background_white"
            android:layout_height="wrap_content"
            android:id="@+id/andersonfaro9"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"/>

        <TextView
            android:text="behance.net/Lucas-Barbosa"
            android:autoLink="web"
            android:textColorLink="@color/background_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/contatos"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"/>


        <TextView
            android:text="Repositório no Github:"
            android:autoLink="web"
            android:textColorLink="@color/background_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repositorio"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:textAlignment="viewStart"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/andersonfaro9"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.44"/>


        <TextView
            android:text="https://goo.gl/6iQXf6"
            android:autoLink="web"
            android:textColorLink="@color/background_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/link"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@+id/repositorio"
            android:layout_marginTop="24dp"/>

    </android.support.constraint.ConstraintLayout>

<!--https://goo.gl/6iQXf6-->


</LinearLayout>